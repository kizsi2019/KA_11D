<Window x:Class="crud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Create Table" Grid.Row="0" Margin="10" Click="button1_Click"/>
        <Button Content="Insert" Grid.Row="0" Margin="10,0,10,10" Click="btnInsert_Click"/>
        <Button Content="Read" Grid.Row="0" Margin="10,0,10,10" Click="btnRead_Click"/>
        <Button Content="Update" Grid.Row="0" Margin="10,0,10,10" Click="btnUpdate_Click"/>
        <Button Content="Delete" Grid.Row="0" Margin="10,0,10,10" Click="btnDelete_Click"/>
        <DataGrid x:Name="dataGridView1" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>

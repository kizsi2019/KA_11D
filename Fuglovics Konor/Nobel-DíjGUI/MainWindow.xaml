        <TextBlock HorizontalAlignment="Left" Height="24" Margin="20,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"><Run Text="Name:"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="20,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"><Run Text="Brn-Dth:"/><LineBreak/><Run/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="24" Margin="20,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56" Text="Country:"/>

    </Grid>
</Window>

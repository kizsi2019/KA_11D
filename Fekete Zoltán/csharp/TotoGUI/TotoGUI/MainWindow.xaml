<Window x:Class="TotoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TotoGUI"
        mc:Ignorable="d"
        Title="Totó eredmény ellenőrző" Height="352" Width="650">
    <Grid>
        <CheckBox  Name="cbHossz" IsEnabled="False" Content="Nem megfelelő a karakterek száma (14)" HorizontalAlignment="Left" Height="20" Margin="45,0,0,0" VerticalAlignment="Center" Width="241"/>
        <CheckBox Name="cbHibasKarakter" Content="Helytelen a karakter az eredményekben" IsEnabled="False" HorizontalAlignment="Left" Height="20" Margin="45,208,0,0" VerticalAlignment="Top" Width="211"/>
        <Label Content="Kérem a foduló eredményeit [1, 2, X]:" HorizontalAlignment="Left" Height="38" Margin="45,37,0,0" VerticalAlignment="Top" Width="211"/>
        <TextBox Name="tbEredmenyek" HorizontalAlignment="Left" Height="29" Margin="45,95,0,0" TextWrapping="Wrap" Text="12x12x12x12x12" VerticalAlignment="Top" Width="280" TextChanged="tbEredmynek_TextChanged"/>
        <Button Name="btnMentes" Content="Eredmények mentése" HorizontalAlignment="Left" Height="29" Margin="45,266,0,0" VerticalAlignment="Top" Width="211" Click="btnMentes_Click"/>
    </Grid>
</Window>

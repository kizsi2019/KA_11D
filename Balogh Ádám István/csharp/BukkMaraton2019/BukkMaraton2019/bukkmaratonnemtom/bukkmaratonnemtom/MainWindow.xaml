        <TextBox HorizontalAlignment="Left" Height="36" Margin="128,110,0,0" TextWrapping="Wrap" Text="0:00:00" VerticalAlignment="Top" Width="115" TextChanged="TextBox_TextChanged"/>

    </Grid>
